  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker compose up",
      "type": "shell",
      "command": "nerdctl compose -f docker/docker-compose.local.yml up --build"
    },
    {
      "label": "docker start dev db",
      "type": "shell",
      "command": "nerdctl compose -f docker/docker-compose.local.yml -p wdm-dev up -d db"
    },
    {
      "label": "docker start test db",
      "type": "shell",
      "command": "nerdctl compose -f docker/docker-compose.local.yml -p test up -d db"
    }
  ]
}
