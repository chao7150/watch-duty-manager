{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "commit": "cz",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:app\"",
    "dev:app": "node -r dotenv/config node_modules/.bin/remix dev",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "format": "prettier --write \"./**/*.{ts,tsx,js,json}\"",
    "lint": "eslint \"app/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"app/**/*.{ts,tsx}\" --fix",
    "start": "remix-serve build",
    "test": "vitest run",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@prisma/client": "^4.8.1",
    "@remix-run/node": "^1.10.1",
    "@remix-run/react": "^1.10.1",
    "@remix-run/serve": "^1.10.1",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "firebase": "^9.15.0",
    "firebase-admin": "^11.4.1",
    "fp-ts": "^2.13.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-firebaseui": "^6.0.0",
    "react-use": "^17.4.0",
    "recharts": "^2.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.29.2",
    "@remix-run/dev": "^1.10.1",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.4",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.21",
    "prettier": "2.8.3",
    "prisma": "^4.8.1",
    "prisma-dbml-generator": "^0.10.0",
    "simple-git-hooks": "^2.8.1",
    "start-server-and-test": "^1.15.2",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vitest": "^0.27.1"
  },
  "engines": {
    "node": ">=14"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "sideEffects": false
}
