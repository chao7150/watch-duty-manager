{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "commit": "cz",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:app\"",
    "dev:app": "node -r dotenv/config node_modules/.bin/remix dev",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "format": "prettier --write \"./**/*.{ts,tsx,js,json}\"",
    "lint": "eslint \"app/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"app/**/*.{ts,tsx}\" --fix",
    "start": "remix-serve build",
    "test": "vitest run",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@prisma/client": "^4.1.1",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "date-fns": "^2.29.1",
    "dotenv": "^10.0.0",
    "firebase": "^9.6.2",
    "firebase-admin": "^10.0.1",
    "fp-ts": "^2.12.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-firebaseui": "^6.0.0",
    "react-use": "^17.4.0",
    "recharts": "^2.1.10"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "autoprefixer": "^10.4.8",
    "concurrently": "^6.5.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild-register": "^3.2.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "lint-staged": "^12.1.2",
    "postcss": "^8.4.16",
    "prettier": "2.5.1",
    "prisma": "^4.1.1",
    "prisma-dbml-generator": "^0.9.1",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.1.2",
    "vitest": "^0.18.1"
  },
  "engines": {
    "node": ">=14"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "sideEffects": false
}
