// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator dbml {
  provider = "prisma-dbml-generator"
}

// アニメ作品
model Work {
  id                  Int                     @id @default(autoincrement())
  episodes            Episode[]
  title               String                  @unique
  publishedAt         DateTime
  durationMin         Int                     @default(30)
  officialSiteUrl     String?
  twitterId           String?
  hashtag             String?
  users               SubscribedWorksOnUser[]
  DistributorsOnWorks DistributorsOnWorks[]
}

model DistributorsOnWorks {
  work                Work        @relation(fields: [workId], references: [id])
  workId              Int
  distributor         Distributor @relation(fields: [distributorId], references: [id])
  distributorId       Int
  workIdOnDistributor String

  @@id(fields: [workId, distributorId])
}

model Distributor {
  id                  Int                   @id @default(autoincrement())
  name                String                @unique
  domain              String
  DistributorsOnWorks DistributorsOnWorks[]
}

// アニメの単話
model Episode {
  work                  Work                    @relation(fields: [workId], references: [id])
  workId                Int
  count                 Int
  publishedAt           DateTime
  title                 String?
  description           String?
  WatchedEpisodesOnUser WatchedEpisodesOnUser[]

  @@id(fields: [workId, count])
}

model SubscribedWorksOnUser {
  userId String
  work   Work   @relation(fields: [workId], references: [id])
  workId Int

  @@id(fields: [userId, workId])
}

model WatchedEpisodesOnUser {
  userId    String
  episode   Episode  @relation(fields: [workId, count], references: [workId, count], onDelete: Cascade)
  workId    Int
  count     Int
  createdAt DateTime
  comment   String?  @db.Text
  rating    Int?

  @@id(fields: [userId, workId, count])
}
