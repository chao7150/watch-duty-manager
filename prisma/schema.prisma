// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator dbml {
  provider = "prisma-dbml-generator"
}

// アニメ作品
model Work {
  id              Int                     @id @default(autoincrement())
  episodes        Episode[]
  title           String                  @unique
  publishedAt     DateTime
  officialSiteUrl String?
  twitterId       String?
  hashtag         String?
  users           SubscribedWorksOnUser[]
}

// アニメの単話
model Episode {
  work                  Work                    @relation(fields: [workId], references: [id])
  workId                Int
  count                 Int
  publishedAt           DateTime
  WatchedEpisodesOnUser WatchedEpisodesOnUser[]

  @@id(fields: [workId, count])
}

model SubscribedWorksOnUser {
  userId String
  work   Work   @relation(fields: [workId], references: [id])
  workId Int

  @@id(fields: [userId, workId])
}

model WatchedEpisodesOnUser {
  userId    String
  episode   Episode  @relation(fields: [workId, count], references: [workId, count], onDelete: Cascade)
  workId    Int
  count     Int
  createdAt DateTime
  comment   String?  @db.Text

  @@id(fields: [userId, workId, count])
}
